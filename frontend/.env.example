# Backend API Base URL
VITE_API_BASE=http://localhost:8000

# API pública Mercado Libre (búsqueda)
# La API de ML es pública y no requiere autenticación para búsquedas básicas
VITE_ML_API_BASE=https://api.mercadolibre.com
VITE_ML_SITE=MLC
VITE_ML_SITE_LIST=MLC,MLA,MLM

# Control de API de Mercado Libre
# false = Usa API real de ML para obtener productos reales con permalinks directos
# true = Desactiva API de ML (usa solo datos mock/externos)
VITE_DISABLE_ML=false

# false = No usar datos falsos, usar API real de ML
# true = Usar datos simulados (desarrollo sin internet)
VITE_USE_MOCK_ML=false

# Configuración adicional
VITE_API_DEBUG=true         # Muestra logs detallados en consola
VITE_USD_TO_CLP_RATE=1000   # Tasa de conversión USD a CLP
VITE_ATTACH_ML_LINKS=true   # Adjunta links de ML a productos externos
VITE_ATTACH_ML_LIMIT=5      # Máximo de productos a buscar en ML por consulta
VITE_API_TIMEOUT=15000      # Timeout en ms (15s) - aumenta si conexión es lenta

# PRODUCCIÓN (recomendado):
# VITE_DISABLE_ML=false
# VITE_USE_MOCK_ML=false
# VITE_API_DEBUG=false

# DESARROLLO SIN INTERNET:
# VITE_DISABLE_ML=true
# VITE_USE_MOCK_ML=true
# VITE_API_DEBUG=true